#define ledPin 3   //تعیین پایه روشنایی

void setup()
{
  Serial.begin(9600); // آهنگ ارسال داده ها هرچه بیشتر باشد میزان تبادل مخابره داده ها هم سریعتر این مقدار به صورت پیش فرض و استاندارد میباشد
  pinMode(ledPin,OUTPUT); // وضعیت و پیکربندی روشنایی  که در اینجا به صورت خروجی تعریف میشود
}

void loop()
{
  function_led_on(); // صدا کردن تابع روشنایی در حالت روشن
  delay(1000); // هر یک ثانیه تاخیر خط بعدی کد را اجرا می کند
  function_led_off(); // صدا کردن تابع روشنایی در حالت خاموش
  delay(1000); // هر یک ثانیه تاخیر خط بعدی کد را اجرا می کند
}

#---------------function led on    تابع روشنایی در حالت روشن
void function_led_on()
{
  digitalWrite(ledPin,HIGH); // وضعیت روشنایی به حالت روشن
}

#---------------function led off    تابع روشنایی در حالت خاموش   
void function_led_off()
{
  digitalWrite(ledPin,LOW); // وضعیت روشنایی به حالت خاموش
}
